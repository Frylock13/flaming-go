.row.game.container{{"ng-controller" => "GameCtrl"}}

  .start-block{{"ng-show" => "gameStatus == 'ready'"}}
    %h1.text-center= "Hello, #{@current_user.name}. Are you ready?"
    
    %a{:href => "", class: "button center", "ng-click" => "startGame(#{@current_user.id})"}
      Start

  .row.game-block{{"ng-show" => "gameStatus != 'ready'"}}
    .movies{{"ng-init" => "getMovies()"}}
      .row.movie
        .col-md-7.block
          %img.center{:src => "{{secret.image}}"}/
          %p.right-answer.text-center{{"ng-show" => "gameStatus == 'finished'"}}
            {{secretMovieTitle}}
          %h2.text-center Your score: {{score}}

          .finished-actions.center{{"ng-show" => "gameStatus == 'finished'"}}
            %a{:href => "/", class: "button"} 
              New Game

            %a{:href => "", class: "button", "ng-click" => "showRating()", "ng-show" => "ratingButton"} 
              Rating

            %a{:href => "", class: "button", "ng-click" => "hideRating()", "ng-hide" => "ratingButton"}
              Back

        .col-md-5.options{{"ng-hide" => "ratingShows"}}
          %ul.center{{"ng-repeat" => "movie in movies"}}
            %li
              %a#option{:href => "", class: "button center", "ng-class" => "{ 'right': $index == rightAnswer, 'wrong': $index == wrongAnswer }", "ng-click" => "checkAnswer(movie.id, $index)"}
                {{movie.title}}

          %ul.help-options{{"ng-hide" => "gameStatus == 'finished'"}}
            %li{{"ng-show" => "firstHelpOption == true"}}
              %a{:href => "", class: "button first", "ng-click" => "getFiftyFifty()"}
                50/50

            %li{{"ng-show" => "secondHelpOption == true"}}
              %a{:href => "", class: "button first", "ng-click" => "getSkipQuestion()"}
                Skip

            %li
              %a{:href => "", class: "button first", "ng-click" => "getMistery()"}
                %img{:src => "http://images.clipartpanda.com/red-question-mark-clipart-bubble-question-mark-hi.png", :alt => "", width: 15}/

        .col-md-5.rating{{"ng-show" => "ratingShows"}}
          %table.center
            %caption Rating

            %tr
              %th Name
              %th Score

            %tr{{"ng-repeat" => "game in games"}}
              %td {{game.user.name}}
              %td {{game.score}}
