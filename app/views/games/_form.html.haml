= form_for(@game) do |f|
  - if @game.errors.any?
    #error_explanation
      %h2
        = pluralize(@game.errors.count, "error")
        prohibited this game from being saved:
      %ul
        - @game.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :score
    %br/
    = f.number_field :score
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .actions
    = f.submit
