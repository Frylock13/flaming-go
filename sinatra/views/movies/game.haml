%h1 Movie
= flash[:success]
= "Вы ответили правильно на #{@game.score} вопросов"

.guess-movie-block
  .image= image_tag(@movie.image, @movie.title)

  .options
    %form{:action => "/movies/game", :method => "post"}
      %ul
        - @options.each do |option|
          %li
            %input{:name => "answer_id", :type => "checkbox", :value => "#{option.id}"}>/
            = option.title
      %input{:name => "id", :checked => "checked", :style => "display:none", :type => "checkbox", :value => "#{@movie.id}"}>/
      %input{:type => "submit", :value => "Send", :class => "button"}